{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@styles/*": ["styles/*"],
      "@interfaces/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@providers/*": ["providers/*"],
      "@hocs/*": ["HOC/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "config/forms/signup.tsz"],
  "exclude": ["node_modules"]
}
